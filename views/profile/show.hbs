<!-- Page Layout here -->
<div class="row profile-row container-fluid">

  <div class="col s12 m12 l12 profile-container">
    <!-- Profile sidebar goes here -->

    <section class="profile">


      <img src="/img/profile_pic.png" alt="Your profile picture" class="circle">
      <h2>{{user.local.username}}</h2>


      {{#if user.hairstats}}
      <div class="container stats">
        {{#each user.hairstats}}


        <div class="row">
          <div class="col card-panel statbox hairtype">
            {{> stat this.hairtype}}
          </div>
          <div class="col card-panel statbox hairlength">
            {{> stat this.hairlength}}
          </div>
        </div>
        <div class="row">
          <div class="col card-panel statbox hairdensity">
            {{> stat this.hairdensity}}
          </div>
          <div class="col card-panel statbox hairporosity">
            {{> stat this.hairporosity}}
          </div>
        </div>

        {{/each}}

        <button type="button" class="btn" name="button">
          <a href="/profile/{{currentUser.id}}/stats/edit">Update</a>
        </button>


      </div>
      {{else}}
      <p>{{user.local.username}} hasn't set their stats yet</p>
      {{/if}}
    </section>

  </div>
</div>

<div class="row navbar-row container-fluid">
  <div class="col s12 m12 l12 navbar-container">

    <nav>
      <div class="nav-wrapper">
        <ul>
          {{#if currentUser}}
          <li>
            <a href="/profile/{{currentUser.id}}/stats/new">adjust stats</a>
          </li>
          <li>
            <a href="/profile/{{currentUser.id}}/regimen/new">+regimen</a>
          </li>
          {{else}}
          <p>You must be logged in to make regimens and add stats</p>
          {{/if}}

        </ul>
      </div>
    </nav>

  </div>

</div>

<div class="row regimen-row container-fluid">

  <div class="col s12 m12 l12 regimen-container">
    <!-- Regimens collection goes here  -->
    {{#if user.regimens}} {{#each user.regimens}}

        <ul class="collapsible regimen-accordion">
    <li>
      <div class="collapsible-header accordion-header">
         <p>
        {{> regimen this.regimentitle}}
      </p>
      <p>{{> regimen this.purpose}}</p>
        </div>
      <div class="collapsible-body accordion-body">
        <span class="col">      
      <p>How do you keep your hair moisturized?</p>
        <p>{{> regimen this.moisturizing}}</p>
      <p>How do you detangle your hair?</p>
        <p>{{> regimen this.detangling}}</p>
      <p>How often do you wash your hair?</p>
        <p>{{> regimen this.washing}}</p>
      <p>What kind of styles do you prefer?</p> 
        <p>{{> regimen this.styling}}</p>
      <p>How often do you trim?</p> 
        <p>{{> regimen this.trimming}}</p>
      <p>Any particular product favorites?</p> 
        <p>{{> regimen this.products}}</p>
      <p>Additional Notes</p> 
      <p>{{> regimen this.additionalNotes}}</p>
      </span>
        </div>
    </li>
  </ul>

    {{/each}} {{else}}
    <p>{{user.local.username}} doesn't have any regimens yet...</p>
    <p>Let's change that</p>
    {{/if}}


  </div>


</div>
