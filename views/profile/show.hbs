<!-- Page Layout here -->
<div class="row profile-row container-fluid">

  <div class="col s12 m12 l12 profile-container">
    <!-- Profile sidebar goes here -->

    <section class="profile-header col s12 m12 l12">


      <img src="/img/profile_pic.png" alt="Your profile picture" class="circle">
      <h2>{{user.local.username}}</h2>

    </section>

    <section class="container-fluid">
      {{#if user.hairstats}}
      <div class=" col s12 m12 l12 stats">
        {{#each user.hairstats}}


        <div class="row statbox-container">
          <div class="col s3 m3 l3 card-panel statbox hairtype">
            <p class="stat-label">type</p>
            {{> stat this.hairtype}}
          </div>
          <div class="col s3 m3 l3 card-panel statbox hairlength">
            <p class="stat-label">length</p>
            {{> stat this.hairlength}}
          </div>
          <div class="col s3 m3 l3 card-panel statbox hairdensity">
            <p class="stat-label">density</p>
            {{> stat this.hairdensity}}
          </div>
          <div class="col s3 m3 l3 card-panel statbox hairporosity">
            <p class="stat-label">porosity</p>
            {{> stat this.hairporosity}}
          </div>
        </div>
        {{/each}}

      </div>
      {{else}}
      <p>{{user.local.username}} hasn't set their stats yet</p>
      {{/if}}
    </section>

  </div>
</div>

<div class="row navbar-row container-fluid">
  <div class="col s12 m12 l12 navbar-container">

    <nav>
      <div class="nav-wrapper">
        <ul>
          {{#if currentUser}}
          <li class="nav-item">
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/profile/{{currentUser.id}}/stats/edit">adjust stats</a>
          </li>
          <li>
            <a href="/profile/{{currentUser.id}}/regimen/new">+regimen</a>
          </li>
          {{else}}
          <p>You must be logged in to make regimens and add stats</p>
          {{/if}}

        </ul>
      </div>
    </nav>

  </div>

</div>

<div class="row regimen-row container-fluid">

  <div class="col s12 m12 l12 regimen-container">
    <!-- Regimens collection goes here  -->

    {{#if user.regimens}} {{#each user.regimens}}

    <ul class="collapsible col s12 m6 l3 regimen-accordion" data-collapsible="accordion">
      <li>
        <div class="collapsible-header row accordion-header">
          <div class="text-container col">
            <h6>{{> regimen this.regimentitle}}</h6>
            <p>{{> regimen this.purpose}}</p>
            <p>created by You</p>
          </div>
          <div class="img-container col">
            <div class="img-frame center-align">
              {{!-- <img src="/img/green_naturalhair_girl.jpg" alt={{> regimen this.regimentitle}} /> --}}
            </div>

                <div class="button-container">
                     <a class="btn-floating btn-small waves-effect waves-light red" href="/profile/{{>regimen this.author}}/regimen/edit">
                <i class="material-icons">edit</i>
              </a> 

              <form action="/profile/regimen/{{>regimen this.id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn-floating btn-small waves-effect waves-light cyan">
                  <i class="material-icons">delete</i>
                  </button>
              </form>
                </div>
          </div>

        </div>
        <div class="collapsible-body accordion-body">
          <span>
            <h6>How do you keep your hair moisturized?</h6>
            <p>{{> regimen this.moisturizing}}</p>
            <h6>How do you detangle your hair?</h6>
            <p>{{> regimen this.detangling}}</p>
            <h6>How often do you wash your hair?</h6>
            <p>{{> regimen this.washing}}</p>
            <h6>Describe your typical washday routine:</h6>
            <p class="big-paragraph"></p>
            <h6>What kind of styles do you prefer?</h6>
            <p class="big-paragraph">{{> regimen this.styling}}</p>
            <h6>How often do you trim?</h6>
            <p>{{> regimen this.trimming}}</p>
            <h6>Any particular product favorites?</h6>
            <p class="big-paragraph">{{> regimen this.products}}</p>
            <h6>Additional Notes</h6>
            <p class="big-paragraph">{{> regimen this.additionalNotes}}</p>
          </span>
        </div>
      </li>

    </ul>


    {{/each}} {{else}}
    <p>{{user.local.username}} doesn't have any regimens yet...</p>
    <p>Let's change that</p>
    {{/if}}


  </div>


</div>