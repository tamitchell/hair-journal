
<div class="container create-regimen">
<section class="form-container">
  <form action="/profile" method="POST" class="form regimen-form">
      <h4>Building a Routine</h4>

    <p class="input-field">
        <p><label for="routinename">Name</label></p>
      <input type="text" name="routinename" id="routinename" placeholder="Routine Name" maxlength="30">
    </p>

    <p class="input-field">
              <p><label for="moisturizing">Moisturizing</label></p>
      <input type="text" name="moisturizing" placeholder="How do you keep your hair moisturized?" maxlength="30">
    </p>

     <fieldset>
       <p class="input-field">
       
       <legend>Detangling Methods</legend>
       
       <div>
    <input type="checkbox" id="comb" name="detangling" value="comb">
    <label for="comb">Comb</label>
  </div>

  <div>
    <input type="checkbox" id="brush" name="detangling" value="brush">
    <label for="brush">Brush</label>
  </div> 

    <div>
    <input type="checkbox" id="fingers" name="detangling" value="brush">
    <label for="fingers">Finger Detangling</label>
  </div>    

  </p>
     </fieldset>

     <fieldset>
       <p class="input-field">
                <legend>Washing Frequency</legend>

          <div>
            <input type="checkbox" id="day" name="washing" value="day">
            <label for="day">Daily</label>
          </div> 

          <div>
            <input type="checkbox" id="week" name="washing" value="week">
            <label for="week">Weekly</label>
          </div>   

          <div>
            <input type="checkbox" id="month" name="washing" value="month">
            <label for="month">Monthly</label>
          </div>

          <div>
            <input type="checkbox" id="nosched" name="washing" value="nosched">
            <label for="nosched">I wash whenever!</label>
          </div>


      </p>
     </fieldset>

     <p class="input-field">
                      <p><label for="stylinh">Styling</label></p>

      <input type="text" name="styling" placeholder="What are your favorite go-to styles to achieve your regimen goal?" maxlength="800">
    </p>

      <p class="input-field">
                      <p><label for="trimming">Trimming</label></p>

      <input type="text" name="trimming" placeholder="How often do you trim?" maxlength="100">
    </p>

    <p class="input-field">
                     <p><label for="products">Products</label></p>

<textarea name="products" cols="60" rows="10" placeholder="Have any staple products? List them here!"></textarea>
    </p>

     <p class="input-field">
                     <p><label for="addNotes">Additional Notes</label></p>

<textarea name="addNotes" cols="60" rows="10" placeholder="Add whatever else you can think of here."></textarea>
    </p>

   
    <p class="input-field">
      <input type="submit" value="Submit" class="btn waves-effect waves-light">
    </p>
  </form>
</section>
</div>