<div class="container statsform-container">

<section class="row col s6 container createStats">
{{#if currentUser}}
  <div class="stat-card card horizontal">
  <div class="card-image stat-card-img">
    <img src="/img/stats_green_img.jpeg" alt="Carefree black boy" class="hoverZoomLink">
  </div>
  <div class="right-content">
        <h4 class="card-title">Hi {{currentUser.local.username}}, what's your Stats?</h4>
    <div class="stat-card card-content">
      <form action="/profile/" method="POST" class="auth-form">
        <label for="hairtypes">Hair Types</label>
  <select class="browser-default" id="hairtypes">
    <option value="" disabled selected>Choose your option</option>
    <optgroup for="Straight Hair">
      <option value="straight">Type 1 - Straight Hair</option>
    </optgroup>
    <optgroup label="Wavy Hair">
      <option value="wavy">Type 2A - Wavy Hair</option>
      <option value="wavy">Type 2B - Wavy Hair</option>
      <option value="wavy">Type 2C - Wavy Hair</option>
      </optgroup>

  <optgroup label="Curly Hair">
        <option value="curly">Type 3A - Curly Hair</option>
        <option value="curly">Type 3B - Curly Hair</option>
        <option value="curly">Type 3C - Curly Hair</option>
    </optgroup>

<optgroup label="Kinky Hair">

    <option value="kinky">Type 4A - Kinky Hair</option>
    <option value="kinky">Type 4B - Kinky Hair</option>
    <option value="kinky">Type 4C - Kinky Hair</option>

</optgroup>
    
  </select>

        <label for="hairlength">Hair Length</label>
  <select class="browser-default" id="hairlength">
    <optgroup for="Short Length">
      <option value="short">TWA - Tweeny Weeny Afro </option>
      <option value="short">Ear Length</option>
      <option value="short">Neck Length</option>
    </optgroup>

    <optgroup label="Average Length">
      <option value="average">Shoulder Length</option>
      <option value="average">Armpit Length</option>
      <option value="average">Bra-Strap Length</option>
    </optgroup>

    <optgroup label="Long Length">
        <option value="long">Mid-Back Length</option>
        <option value="long">Waist Length</option>
        <option value="long">Hip Length</option>
        <option value="long">Tailbone Length</option>
        <option value="long">Classic Length</option>
    </optgroup>

<optgroup label="Extremely Long Length">
        <option value="long">Mid-Thigh Length</option>
        <option value="long">Knee Length</option>
        <option value="long">Calf Length</option>
        <option value="long">Ankle Length</option>
        <option value="long">Floor Length</option>
    </optgroup>
    
  </select>

  <fieldset>
  <legend>Select Hair Density (Amount of Hair on Head)</legend>
  <div>
    <input type="checkbox" id="lowdensity" value="thin" />
      <label for="lowdensity">Low Density - Thin</label>
  </div>
  <div>
   <input type="checkbox" id="meddensity" value="medium" />
    <label for="meddensity">Medium Density - Not too thick, not really thin</label>
  </div>

    <div>
   <input type="checkbox" id="highdensity" value="thick" />
      <label for="highdensity">High Density - Thick Hair</label>
  </div>
</fieldset>

   <fieldset> 
<legend>Hair Porosity</legend> 
<select class="browser-default">
      <option value="" disabled selected>Choose your option</option>
      <option value="lowporosity">Low Porosity</option>
      <option value="medporosity">Medium Porosity</option>
      <option value="highporosity">High Porosity</option>
      

</select>
</fieldset> 
    <p class="input-field">
      <input type="submit" value="Submit" class="btn waves-effect waves-light">
    </p>
  </form>
    </div>
  </div>
</div>
{{else}}
<div class="card-panel responsive-img teal stats-not-logged">

    <span class="white-text flow-text not-logged-text">
          <p>You need to be logged in to build a stat</p>
    </span>
   
</div>
{{/if}}
</section>

</div>